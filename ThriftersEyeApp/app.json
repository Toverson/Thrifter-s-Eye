{
  "expo": {
    "name": "Thrifter's Eye",
    "slug": "thrifters-eye-app",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/icon.png",
    "userInterfaceStyle": "light",
    "splash": {
      "image": "./assets/splash.png",
      "resizeMode": "contain",
      "backgroundColor": "#667eea"
    },
    "assetBundlePatterns": [
      "**/*"
    ],
    "ios": {
      "supportsTablet": false,
      "bundleIdentifier": "com.thrifterseye.app",
      "buildNumber": "1",
      "googleServicesFile": "./ios/GoogleService-Info.plist",
      "infoPlist": {
        "NSCameraUsageDescription": "This app needs access to camera to scan items for valuation.",
        "NSPhotoLibraryUsageDescription": "This app needs access to photo library to select images for scanning.",
        "NSLocationWhenInUseUsageDescription": "This app needs location access to provide region-specific pricing information."
      }
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/adaptive-icon.png",
        "backgroundColor": "#FFFFFF"
      },
      "package": "com.thrifterseye.app"
    },
    "web": {
      "favicon": "./assets/favicon.png",
      "bundler": "metro"
    },
    "platforms": [
      "ios",
      "android",
      "web"
    ],
    "plugins": [
      "@react-native-firebase/app",
      [
        "expo-image-picker",
        {
          "photosPermission": "The app accesses your photos to let you scan items for valuation.",
          "cameraPermission": "The app accesses your camera to let you scan items for valuation."
        }
      ],
      [
        "expo-location",
        {
          "locationWhenInUsePermission": "Show your location on map."
        }
      ]
    ]
  }
}
